<script>
	function fn_validate() {
		var frmLogin = document.frmLogin;
		var user_id = frmLogin.user_id.value;
		
		if((user_id.length == 0 || user_id =="") || (user_pw.length ==0 || user_pw == "")) {
			alert("it is necessary to enter your id and pw");
		}else {
			frmLogin.method = "post";
			frmLogin.action = "login5";
			frmLogin.submit();
		}
	}
</script>
</head>
<body>
	<form name="frmLogin" method="" action="" encType="UTF-8">
		ID : <input type="text" name="user_id"><br>
		PW : <input type="password" name="user_pw" /><br>
		<input type="button" value="login" onClick="fn_validate()"/>
		<input type="reset" value="reset"/>
		<input type="hidden" name="user_address" value="seoul seongbook" />
